<style>
    body {

        background-image: url(../images/banner-slide/Banner-1.jpg);
        
    }
    
    .card {
        height: 600;
        transform: translateY(100px);
        border: none; /* Remove border from card */
        border-radius: 25px; /* Add border radius */
        box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.1); /* Add shadow for depth */
    }
    
    .card-title {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333; /* Dark text color */
