    }

    .form-group{
        margin: 10px;
        padding-top: 20px;
        font-size: 20px;
    }
    .form-group label{
        border-radius: 25px;
        padding: 10px;
        font-weight: 600;
    }

    .form-group input{
        border-radius: 25px;
        padding: 20px;
        font-size: 16px;
    }
    
