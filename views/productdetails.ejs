<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<section class="container-fluid" style="height: 100vh; width: 100vw; margin-top: 100px; font-size: 25px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-12">
                <div class="card" style="width: 100%">
                    <img src="<%= productdetail.productimage %>" class="card-img" alt="..." >
                    <div class="card-body">
                      <h5 class="card-title display-4 fw-bold text-uppercase"><%= productdetail.productname %></h5>
                      <p class="card-text fw-bold d-flex justify-content-between"><span class="text-uppercase">product price:</span><span class="fw-light" style="font-size: 20px;"><%= productdetail.price %></span></p>
                      <p class="card-text fw-bold d-flex justify-content-between"><span class="text-uppercase">about:</span></br><span class="fw-light" style="font-size: 20px;"><%= productdetail.description %></span></p>
                      <p class="card-text fw-bold d-flex justify-content-between"> <span class="text-uppercase">product category:</span><span class="fw-light" style="font-size: 20px;"><%= productdetail.category %></span></p>
                      <button href="#" class="bg-white border-0  mx-auto w-100"><a class="btn w-25 text-uppercase fw-bold" style="background-color: rgb(58, 216, 58);">buy now</a></button>
                    </div>
                  </div>
            </div>
        </div>
    </div>
</section>

