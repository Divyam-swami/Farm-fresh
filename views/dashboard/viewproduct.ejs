
    <%- include("header.ejs") %>
    <head>
    
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css">

    </head>

    <style>
      .dt-search{
        font-size: 1vw;
      }
      .dt-length{
        font-size: 1vw;
      }

      .dt-info{
        font-size: 1vw;
      }
      .dt-paging{
        font-size: .6vw;
        width: 200px;
      }
      .fg-button{
        width: 30px;
      }
    </style>
    
<section class="header dashboard-section mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-3 dashboard-text1">
                <%- include("left.ejs") %>
            </div>
            <div class="col-12 col-lg-9 dashboard-text2">
              <%if(productdata.length>0){%>
              <table id="example"  class="table table-dark table-hover  mt-3 ">
                <thead>
                  <tr class="fw-bold ">
                    <th>product name</th>
                    <th>price</th>
                    <th>category</th>
                    <th>image</th>
                    <th>description</th>
                    <th>edit/delete</th>
                  </tr>
                </thead>
                
                <tbody class="">
                  <% for(var i=0; i<productdata.length; i++){%>
                  <tr >
                    <td><%= productdata[i].productname %></td>                  
                    <td><%= productdata[i].price %></td>                  
                    <td><%= productdata[i].category %></td>    
                    <td><img style="height: 80px; width: 100px;" src="<%= productdata[i].productimage %>" ></td>                  
                    <td><%= productdata[i].description %></td>                  
                    <td><a href="/delete/<%= productdata[i].id %> " class="btn btn-primary border-none" style="background-color: rgb(7, 224, 7);" >DELETE</a>
                      <a href="/edit/<%= productdata[i].id %>" class="btn btn-primary border-none" style="background-color: rgb(7, 224, 7);">EDIT</a></td>          
                  </tr>
                                    <%} %>
                </tbody>
            </table>                          
              
              <% } else{ %>
                record not found  
            <%} %>
            </div>
        </div>

    </div>
    
</section>

