
    <%- include("header.ejs") %>
    <head>
    
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css">

    </head>

    <style>
      .dt-search{
        font-size: 1vw;
      }
      .dt-length{
        font-size: 1vw;
      }

      .dt-info{
        font-size: 1vw;
      }
      .dt-paging{
        font-size: .6vw;
        width: 200px;
      }
      .fg-button{
        width: 30px;
      }
    </style>
<section class="header dashboard-section mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-3 dashboard-text1">
                <%- include("left.ejs") %>
            </div>
            <div class="col-9 dashboard-text2">
              <%if(regdata.length>0){%>
                <table id="example" class="table table-dark table-hover mt-3 ">
                    <thead>
                      <tr>
                        
                        <th scope="col">username</th>
                        <th scope="col">email</th>
                        <th scope="col">password</th>
                        <th scope="col">address</th>
                        <th scope="col">phone</th>
                        <th scope="col">edit/delete</th>

                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0; i<regdata.length; i++){%>
                      <tr>
                        
                        <td><%= regdata[i].username %></td>
                        <td><%= regdata[i].email %></td>
                        <td><%= regdata[i].password %></td>
                        <td><%= regdata[i].address %></td>
                        <td><%= regdata[i].phone %></td>
                        <td><a href="/delete_1/<%= regdata[i].id %> " class="btn btn-primary" >DELETE</a>
                          <a href="/edit_1/<%= regdata[i].id %>" class="btn btn-primary">EDIT</a></td>      
                     </tr>
                     <%} %>
                    </tbody>
                  </table>
                  
                  <% } else{ %>
                      record not found  
                  <%} %>
                  
            </div>
        </div>
    </div>
</section>
